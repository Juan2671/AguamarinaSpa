@model Usuarios

<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <form method="post" action="/Usu/Usuario/Modificar">
            <!-- BEGIN: Form Layout -->
            <div class="intro-y box p-5">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserName" />
                <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                    <input asp-for="Email" class="intro-x login__input input input--lg w-full border border-gray-300 block" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                    <input asp-for="Nombre" class="intro-x login__input input input--lg w-full border border-gray-300 block mt-4" placeholder="Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                    <input asp-for="Apellido" class="intro-x login__input input input--lg w-full border border-gray-300 block mt-4" placeholder="Apellido" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                    <input asp-for="Documento" class="intro-x login__input input input--lg w-full border border-gray-300 block mt-4" placeholder="Documento" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>

                

                <div class="text-right mt-5">
                    <a href="~/Usu/Usuario/Index">
                        <button type="button" class="button w-24 border text-gray-700 mr-1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Cancelar</font></font></button>
                    </a>

                    <button type="submit" class="button w-24 bg-theme-1 text-white"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Modificar</font></font></button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

