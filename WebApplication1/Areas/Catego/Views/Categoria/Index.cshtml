@model DataPaginador<Categoria>

<h1 style="text-align:center">CATEGORIAS</h1>
<br />
<div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
    <ul class="xl:text-right">
        <li>
            <form method="get" action="/Catego/Categoria/Index">
                <select class="w-30 input box mt-3 sm:mt-0 xl:text-left" name="Registros">
                    <option>Seleccionar</option>
                    <option>2</option>
                    <option>4</option>
                    <option>6</option>
                    <option>8</option>
                    <option>10</option>
                </select>
                <input type="search" class="input w-200 box pr-10 placeholder-theme-13" placeholder="Buscar..." name="Search" />
                <button id="buscar" type="submit" class="button w-8 xl:w-12 text-white bg-theme-1 xl:mr-2"><span class="icon"><i class="fa fa-search"></i></span></button>
            </form>
        </li>
        <br />
        <li>
            @Html.Raw(Model.Pagi_info)
        </li>
    </ul>

</div>
<div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
    <table class="table table-report -mt-2">
        <thead>
            <tr>
                <th class="whitespace-no-wrap">Codigo</th>
                <th class="text-center whitespace-no-wrap">Nombre</th>
                <th class="text-center whitespace-no-wrap">Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Categoria item in Model.Lista)
            {
                <tr>
                    <div class="flex justify-center items-center">
                        <td>@item.CategoriaId</td>
                        <td>@item.NombreCategoria</td>
                    </div>
                    <td class="table-report__action w-56">
                        <div class="flex justify-center items-center">
                            <a class="flex items-center mr-3" href="/Catego/Categoria/Editar/@item.CategoriaId"> <i data-feather="check-square" class="w-4 h-4 mr-1"></i> Editar </a>

                            <button class="flex items-center text-theme-6" data-toggle="modal" data-target="#delete-confirmation-modal" onclick="Elimi(@item.CategoriaId)"> <i data-feather="trash-2" class="w-4 h-4 mr-1"></i> Eliminar </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
    <table class="table table-report -mt-2 xl:text-center">
        <tbody>
            <tr>
                <td>
                    <ul id="pagination">
                        @Html.Raw(Model.Pagi_navegacion)
                    </ul>
                </td>
        </tbody>
    </table>
</div>


<div class="intro-x mt-5 xl:mt-8 text-center xl:text-right">
    <a href="~/Catego/Categoria/Agregar">
        <button class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-3">Agregar</button>
    </a>
</div>


<script src="~/js/Datos.js"></script>