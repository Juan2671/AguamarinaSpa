@page
@model ResetPasswordModel


    <hr />
    <div class="my-auto mx-auto xl:ml-20 bg-white xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
        <form method="post">
            <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                Cambia tu contraseña.
            </h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4" asp-for="Input.Code" type="hidden" />

            <div class="intro-x mt-8">

                <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">

                    <input class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Email" asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">

                    <input class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Nueva Contraseña" asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">

                    <input class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Confirmar Nueva contraseña" asp-for="Input.ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

            </div>

            <div class="intro-x mt-5 xl:mt-4 text-center xl:text-left">
                <button type="submit" class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-3">Restablecer</button>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
