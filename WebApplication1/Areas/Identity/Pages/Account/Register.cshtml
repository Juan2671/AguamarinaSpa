@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="my-auto mx-auto xl:ml-20 bg-white xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
            Registrarse
        </h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="intro-x mt-2 text-gray-500 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
        
        <div class="intro-x mt-8">

            <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                <input asp-for="Input.Nombre" class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Nombre" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                <input asp-for="Input.Apellido" class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Apellido" />
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>
            <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                <input asp-for="Input.Documento" class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Documento" />
                <span asp-validation-for="Input.Documento" class="text-danger"></span>
            </div>
            <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                <input asp-for="Input.Email" class="intro-x login__input input input--lg border border-gray-300 block" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                <input asp-for="Input.Password" class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">
                <input asp-for="Input.ConfirmPassword" class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Confirmar Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="intro-x mt-5 xl:mt-4 text-center xl:text-left">
            <button type="submit" class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-3">Registrarse</button>

            <button asp-page="./Login" class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-3">Inicio</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
