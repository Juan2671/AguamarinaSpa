@model CategoriaProductos

<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <form method="post" action="/Categorias/Categoria/Guardar">
            <!-- BEGIN: Form Layout -->
            <div class="intro-y box p-8">
                <input type="hidden" asp-for="CategoriaProductosId" />
                <div class="form-group">
                    <label asp-for="NombreCategoria"></label>
                    <input asp-for="NombreCategoria" type="text" class="input w-full border mt-2" placeholder="Nombre" />
                    <span asp-validation-for="NombreCategoria" style="color: brown;"></span>
                </div>
                
                <div class="text-right mt-5">
                    <button type="button" onclick="CancelarCategoria()" class="button w-24 border text-gray-700 mr-1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Cancelar</font></font></button>

                    <button type="submit" class="button w-24 bg-theme-1 text-white"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Modificar</font></font></button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

