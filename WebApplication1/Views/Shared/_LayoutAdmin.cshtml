@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuarios> SignInManager
@inject UserManager<Usuarios> UserManager

<!DOCTYPE html>
<html lang="en">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="https://img.icons8.com/ios-glyphs/60/000000/pot-.png" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Midone admin is super flexible, powerful, clean & modern responsive tailwind admin template with unlimited possibilities.">
    <meta name="keywords" content="admin template, Midone admin template, dashboard template, flat admin template, responsive admin template, web app">
    <meta name="author" content="LEFT4CODE">
    <title>Inicio</title>
    <!-- BEGIN: CSS Assets-->

    <link href="~/lib/template/css/estilo.css" rel="stylesheet" />
    <link href="~/lib/template/css/Es.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- END: CSS Assets-->
    @RenderSection("Style", false)
</head>
<!-- END: Head -->
<body class="cuerpo">
    <!-- BEGIN: Mobile Menu -->
    <div class="mobile-menu md:hidden">
        <div class="mobile-menu-bar">
            <a href="" class="flex mr-auto">
                <img alt="Midone Tailwind HTML Admin Template" class="w-6" src="~/lib/template/images/AguamarinaSpa.jpg">
            </a>
            <a href="javascript:;" id="mobile-menu-toggler"> <i data-feather="bar-chart-2" class="w-8 h-8 text-white transform -rotate-90"></i> </a>
        </div>
        <ul class="border-t border-theme-24 py-5 hidden">
            <li>
                <a href="index.html" class="menu menu--active">
                    <div class="menu__icon"> <i data-feather="home"></i> </div>
                    <div class="menu__title"> Inicio </div>
                </a>
            </li>
            <li>
                <a href="javascript:;" class="menu">
                    <div class="menu__icon"> <i data-feather="box"></i> </div>
                    <div class="menu__title"> Menu Layout <i data-feather="chevron-down" class="menu__sub-icon"></i> </div>
                </a>
                <ul class="">
                    <li>
                        <a href="index.html" class="menu">
                            <div class="menu__icon"> <i data-feather="activity"></i> </div>
                            <div class="menu__title"> Side Menu </div>
                        </a>
                    </li>
                    <li>
                        <a href="simple-menu-dashboard.html" class="menu">
                            <div class="menu__icon"> <i data-feather="activity"></i> </div>
                            <div class="menu__title"> Simple Menu </div>
                        </a>
                    </li>
                    <li>
                        <a href="top-menu-dashboard.html" class="menu">
                            <div class="menu__icon"> <i data-feather="activity"></i> </div>
                            <div class="menu__title"> Top Menu </div>
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="side-menu-inbox.html" class="menu">
                    <div class="menu__icon"> <i data-feather="inbox"></i> </div>
                    <div class="menu__title"> Inbox </div>
                </a>
            </li>
            <li>
                <a href="side-menu-file-manager.html" class="menu">
                    <div class="menu__icon"> <i data-feather="hard-drive"></i> </div>
                    <div class="menu__title"> File Manager </div>
                </a>
            </li>
            <li>
                <a href="side-menu-point-of-sale.html" class="menu">
                    <div class="menu__icon"> <i data-feather="credit-card"></i> </div>
                    <div class="menu__title"> Point of Sale </div>
                </a>
            </li>
            <li>
                <a href="side-menu-chat.html" class="menu">
                    <div class="menu__icon"> <i data-feather="message-square"></i> </div>
                    <div class="menu__title"> Chat </div>
                </a>
            </li>
            <li>
                <a href="side-menu-post.html" class="menu">
                    <div class="menu__icon"> <i data-feather="file-text"></i> </div>
                    <div class="menu__title"> Post </div>
                </a>
            </li>
        </ul>
    </div>
    <!-- END: Mobile Menu -->
    <div class="flex">
        <!-- BEGIN: Side Menu -->
        <nav class="side-nav">
            <a href="" class="intro-x flex items-center pl-5 pt-4">
                <img alt="Midone Tailwind HTML Admin Template" class="w-22" src="~/lib/template/images/mis_recetas.jpg">
            </a>
            <div class="side-nav__devider my-6"></div>
            <ul>
                <li>
                    <a id="link" asp-area="Inicio" asp-controller="Panel" asp-action="Index" class="side-menu side-menu--active">
                        <div class="side-menu__icon">
                            <img src="https://img.icons8.com/pastel-glyph/64/000000/home.png" />
                        </div>
                        <div class="side-menu__title"> Inicio </div>
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a href="javascript:;.html" class="side-menu">
                            <div class="side-menu__icon"> <img src="https://img.icons8.com/pastel-glyph/54/000000/ingredients--v1.png" /> </div>
                            <div class="side-menu__title"> Admin Ingredientes </div>
                        </a>
                        <ul class="side-menu__sub-open" id="datosProductos">
                            <li>
                                <a id="link" asp-area="Productos" asp-controller="Producto" asp-action="Index" class="side-menu">
                                    <div class="side-menu__icon"> <img src="https://img.icons8.com/metro/35/000000/ingredients.png" /></div>
                                    <div class="side-menu__title"> Ingredientes </div>
                                </a>
                            </li>

                            <li>
                                <a id="link" asp-area="Categorias" asp-controller="Categoria" asp-action="Index" class="side-menu">
                                    <div class="side-menu__icon"> <img src="https://img.icons8.com/ios-filled/33/000000/category.png" /> </div>
                                    <div class="side-menu__title"> Categorias </div>
                                </a>
                            </li>
                            }
                        </ul>
                    </li>
                }


                <li>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="javascript:;.html" class="side-menu">
                            <div class="side-menu__icon"> <img src="https://img.icons8.com/ios-filled/50/000000/cooking-book--v1.png" /> </div>
                            <div class="side-menu__title"> Admin Resetas</div>
                        </a>
                    }
                <ul class="side-menu__sub-open" id="datosProductos">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>

                            <a id="link" asp-area="Servi" asp-controller="Servicio" asp-action="Index" class="side-menu">
                                <div class="side-menu__icon"> <img src="https://img.icons8.com/ios-filled/50/000000/kebab.png" /> </div>
                                <div class="side-menu__title"> Recetas </div>
                            </a>
                        </li>
                    }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a id="link" asp-area="Catego" asp-controller="Categoria" asp-action="Index" class="side-menu">
                                    <div class="side-menu__icon"> <img src="https://img.icons8.com/ios-filled/33/000000/category.png" /> </div>
                                    <div class="side-menu__title"> Categorias </div>
                                </a>
                            </li>
                        }
                    </ul>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a id="link" asp-area="Usu" asp-controller="Usuario" asp-action="Index" class="side-menu">
                            <div class="side-menu__icon"> <img src="https://img.icons8.com/windows/32/000000/users-settings.png" /> </div>
                            <div class="side-menu__title"> Usuarios </div>
                        </a>
                    </li>
                }
                
                @if (User.IsInRole("Usuario"))
                {
                    <li>
                        <a id="link" class="side-menu" asp-area="Servi" asp-controller="Servicio" asp-action="mis_recetas">
                            <div class="side-menu__icon">  <img src="https://img.icons8.com/ios-filled/50/000000/kebab.png" /> </div>
                            <div class="side-menu__title"> Mis Recetas </div>
                        </a>
                    </li>
                }


                @if (User.IsInRole("Usuario") || User.IsInRole("Admin"))
                {
                    <li>
                        <a id="link" class="side-menu" asp-area="Servi" asp-controller="Servicio" asp-action="IndexDos">
                            <div class="side-menu__icon"> <img src="https://img.icons8.com/ios-filled/50/000000/book.png"/>  </div>
                            <div class="side-menu__title"> Post Recetas </div>
                        </a>
                    </li>
                }

            </ul>
        </nav>
        <!-- END: Side Menu -->
        <!-- BEGIN: Content -->
        <div class="content">
            <!-- BEGIN: Top Bar -->
            <div class="top-bar">
                <!-- BEGIN: Breadcrumb -->
                <div class=" mr-auto hidden sm:flex">
                    <a href="" class="">Mis Resetas</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i> <a href="" class="breadcrumb--active">
                        @if (User.IsInRole("Usuario"))
                        {
                            <p>Usuario</p>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <p>Administrador</p>
                        }
                    </a>
                </div>
                <!-- END: Notifications -->
                <!-- BEGIN: Account Menu -->
                <div class="-intro-y dropdown w-8 h-8 relative">
                    <div class="dropdown-toggle w-8 h-8 rounded-full overflow-hidden shadow-lg image-fit zoom-in">
                        <img src="https://img.icons8.com/color/48/000000/xbox-menu--v1.png" />
                    </div>
                    <div class="dropdown-box mt-10 absolute w-56 top-0 right-0 z-20">
                        <div class="dropdown-box__content box bg-theme-38 text-white">
                            <div class="p-4 border-b border-theme-40">
                                <div class="font-medium">@User.Identity.Name</div>
                                @if (User.IsInRole("Usuario"))
                                {
                                    <div class="text-xs text-theme-41">Usuario</div>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                    <div class="text-xs text-theme-41">Administrador</div>
                                }

                            </div>
                            <div class="p-2 border-t border-theme-40">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 rounded-md"><i data-feather="toggle-right" class="w-4 h-4 mr-2"></i>Logout</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END: Account Menu -->
            </div>
            <!-- END: Top Bar -->
            <div class="grid grid-cols-12 ">
                <div class="col-span-12">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- END: Content -->
    </div>
    <!-- BEGIN: JS Assets-->


    <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=[" your-google-map-api"]&libraries="places"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="/lib/template/js/app.js"></script>
    
    <script src="~/js/Datos.js"></script>
    <!-- END: JS Assets-->
    @RenderSection("Scripts", false)
</body>
</html>

